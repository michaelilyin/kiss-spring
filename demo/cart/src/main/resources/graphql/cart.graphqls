type Cart @key(fields: "id") {
  id: ID!
  user: User!
}

type User @key(fields: "id") @extends {
  id: ID! @external
  cart: Cart @requires(fields: "id")
}

type UserMutation @key(fields: "id") @extends {
  id: ID! @external
  createCart: Cart! @requires(fields: "id")
}

extend type Query {
  cart(id: ID!): Cart
}

extend type Mutation {
  updateCart: Cart!
}
