type Role {
  id: ID!
  name: String!
}

type User @key(fields: "id") {
  id: ID!
  username: String!
  roles: [Role!]!
}

input UserCreate {
  username: String!
}

extend type Query {
  users: [User!]!
  user(id: ID!): User
}

type UserMutation @key(fields: "id") {
  id: ID!
}

extend type Mutation {
  createUser(user: UserCreate!): User!
  user(id: ID!): UserMutationContext
}
