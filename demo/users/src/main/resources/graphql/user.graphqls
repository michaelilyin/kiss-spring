type User @key(fields: "id") {
  id: ID!
  username: String!
}

input UserCreate {
  username: String!
}

type UserMutation @key(fields: "id") {
  id: ID!
  username: String!
}

extend type Query {
  users: [User!]!
  user(id: ID!): User
}

extend type Mutation {
  createUser(user: UserCreate!): User!
  user(id: ID!): UserMutation
}
